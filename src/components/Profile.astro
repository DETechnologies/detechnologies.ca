---
const {image, name, linkedinURL} = Astro.props;
---
<div class="w-full max-w-sm rounded-lg shadow bg-gray-800 border-gray-700">
    <div class="flex justify-end px-4 pt-4">
    </div>
    <div class="flex flex-col items-center pb-10">
        <img class="w-36 h-36 mb-3 rounded-full shadow-lg" src={image}/>
        <h5 class="mb-1 text-xl font-medium text-white">{name}</h5>
        <div class="flex mt-4 space-x-3 md:mt-6">
            <a href={linkedinURL} class="inline-flex items-center px-4 py-2 text-sm font-medium text-center rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:ring-blue-800">LinkedIn</a>
        </div>
    </div>
</div>